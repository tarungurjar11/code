//https://www.hackerrank.com/challenges/reverse-game/problem



#include<stdio.h>
#include<math.h>

int main()
{
    int t;
    scanf("%d",&t);
    while(t--)
    {
        int n,k,k1;
        scanf("%d%d",&n,&k);
        
        int en=n/2;
        if(en<=k)
            k1=(n-1-k)*2;
        else {
            k1=(k+1)*2-1;
        }
        printf("%d\n",k1);
    }
    return 0;
}
